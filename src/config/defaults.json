{
  "version": 1,
  "polling": {
    "gamma_discovery_seconds": 60,
    "clob_eval_seconds": 2,
    "watchlist_ttl_minutes": 30,
    "candidate_cooldown_seconds": 20,
    "depth_cache_ttl_seconds": 15,
    "pending_window_seconds": 6,
    "max_watchlist": 200,

    "http_max_concurrency": 4,
    "http_queue_max": 50,
    "http_timeout_ms": 2500,

    "eval_max_markets_per_cycle": 20,
    "max_token_resolves_per_cycle": 5
  },
  "gamma": {
    "gamma_base_url": "https://gamma-api.polymarket.com",
    "gamma_timeout_ms": 2500,
    "gamma_tags": ["esports", "nba", "ncaa-basketball"],

    "only_live_default": true,
    "only_live_by_league": {
      "cbb": false,
      "nba": false,
      "esports": true
    },

    "max_events_per_fetch": 30,
    "max_events_per_fetch_by_tag": {
      "ncaa-basketball": 200,
      "nba": 200,
      "esports": 30
    },
    "events_max_markets_per_event": 6,
    "min_vol24h_usd": 2000,

    "keep_missing_date": false,
    "min_days_delta_keep_by_league": {
      "cbb": -1,
      "nba": -1,
      "esports": -1
    },
    "max_days_delta_keep_by_league": {
      "cbb": 7,
      "nba": 7,
      "esports": 2
    }
  },
  "filters": {
    "EPS": 0.000001,
    "min_prob": 0.94,
    "max_entry_price": 0.97,
    "max_spread": 0.02,
    "near_prob_min": 0.945,
    "near_spread_max": 0.015,
    "min_exit_depth_usd_bid": 2000,
    "min_entry_depth_usd_ask": 1000,
    "exit_depth_floor_price": 0.70,
    "max_levels_considered": 50
  },
  "esports": {
    "series_guard_threshold_high": 0.94
  },
  "paper": {
    "notional_usd": 10,
    "resolution_poll_seconds": 60,
    "max_open_positions": 200
  },
  "tp": {
    "bid_target": 0.998,
    "min_profit_per_share": 0.002,
    "fees_roundtrip": 0,
    "enable_gate": false
  },
  "context": {
    "enabled": false,
    "cbb": {
      "provider": "espn",
      "fetch_seconds": 15,
      "timeout_ms": 2500,
      "max_ctx_age_ms": 120000,
      "max_days_delta_fetch": 7
    },
    "nba": {
      "provider": "espn",
      "fetch_seconds": 15,
      "timeout_ms": 2500,
      "max_ctx_age_ms": 120000,
      "max_days_delta_fetch": 7
    }
  }
}
